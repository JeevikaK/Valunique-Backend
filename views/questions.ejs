<!DOCTYPE html>
<html lang="en">
    <%- include ("./partials/head.ejs") %>
    <body>
        <%- include ("./partials/background.ejs") %>

        <div class="content content_questions">
            <nav>
                <div class="user">
                    <img src="/images/user-img.png" alt="user-icon">
                    <p>John Doe</p>
                </div>
            </nav>
            <img src="/images/Volvo-Logo-2020.png" alt="Volvo Logo" class="volvo_logo">
            <div class="questions_content">
                <p class="question_num">Question <%= id %></p>
                <p class="questions_page">What do you know about Volvo?</p>
                <div class="question_answer">
                    <label for="answer" class="answer_style">
                        Answer
                    </label>
                    <textarea name="answer" rows="4" id="" class="answer_area"></textarea>
                </div>
            </div>
            <div class="navigate">
                <a href="#"><i class="fa fa-solid fa-chevron-left arrow"></i></a>
                <p>3 / 10</p>
                <a href="#"><i class=" fa fa-solid fa-chevron-right arrow"></i></a>
            </div>
        </div>

        <%- include ("./partials/footer.ejs") %>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
        <script
            src="https://code.jquery.com/jquery-3.6.0.js"
            integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk="
            crossorigin="anonymous"></script>
    </body>
</html>