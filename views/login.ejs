<!DOCTYPE html>
<html lang="en">
    <%- include ("./partials/head.ejs") %>

    <body>        
        <%- include ("./partials/background.ejs") %>
        <div class="notification"></div>
        <div class="content content_login">
            <div class="login_logo">
                <img src="/images/Volvo-Logo-2020.png" alt="Volvo Logo" class="login_logo">
            </div>
            <p class="login_heading">Welcome to Volvo</p>
            <form action="/" class="login_form" method="POST">
                <label class="login_details" for="candidate_id">Candidate Ref. ID</label>
                <input type="text" name="candidate_id" id="candidate_id" placeholder="Eg: 12345678">
                <br>
                <label class="login_details" for="job_id">Job ID</label>
                <input type="text" name="job_id" id="job_id" placeholder="Eg: 1B2A5678">
                <span class="error_message" aria-live="polite"> <%- message %> </span>
                <input type="submit" class="login_submit" value="Login">
            </form>
        </div>

        <%- include ("./partials/footer.ejs") %>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
        <script
            src="https://code.jquery.com/jquery-3.6.0.js"
            integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk="
            crossorigin="anonymous"></script>
    </body>
</html>