<!DOCTYPE html>
<html lang="en">
    <%- include ("./partials/head.ejs") %>

    <body>        
        <%- include ("./partials/background.ejs") %>
    
        <div class="content content_login content_status">
            <a href="/logout" class="logoutStatus"><h6>Logout</h6></a>
            <div class="login_logo">
                <img src="/images/Volvo-Logo-2020.png" alt="Volvo Logo" class="login_logo">
            </div>
            <p class="login_heading">Thank you for Applying!</p>
            <div class="status_container">
                <div class="status">
                    <div class="status_main">
                        <p class="status_heading">Status:</p>
                        <div class="status_text">
                            <p>Your application has been submittied!</p>
                        </div>
                    </div>
                    <div class="candidate_id">
                        <p class="candidate_id_heading">Candidate ID : </p>
                        <p class="candidate_id_text"><%= candidate_id %></p>
                    </div>
                    <div class="job_id">
                        <p class="job_id_heading">Job ID : </p>
                        <p class="job_id_text"><%= job_id %></p>
                    </div>
                    <div class="ApplyDate">
                      <p class="ApplyDate_heading">Applied On : </p>
                      <p class="ApplyDate_text"><%= appliedOn %></p>
                  </div>
                </div>
                <div class="stepper-wrapper">
                    <div class="stepper-item completed">
                      <div class="step-counter">1</div>
                      <div class="step-name">Applying</div>
                    </div>
                    <div class="stepper-item completed">
                      <div class="step-counter">2</div>
                      <div class="step-name">Applied</div>
                    </div>
                    <div class="stepper-item">
                      <div class="step-counter">3</div>
                      <div class="step-name">Review</div>
                    </div>
                    <div class="stepper-item">
                      <div class="step-counter">4</div>
                      <div class="step-name">Interview</div>
                    </div>
                  </div>
                  <div class="status_end">
                    <p>We will get back to you shortly!</p>
                  </div>
            </div>
    
        </div>

        <%- include ("./partials/footer.ejs") %>

    </body>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
    <script
        src="https://code.jquery.com/jquery-3.6.0.js"
        integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk="
        crossorigin="anonymous"></script>
    <script></script>
</html>